{
    "force": true,
    
    "bundles": {
        "dist/app-bundle": {
            "includes": [
                "styles/**/*.css!text",
                "src/**/*.html!text",
                "src/**/*.ts",
                
                "aurelia-bootstrapper",
                "aurelia-framework",
                "aurelia-history-browser",
                "aurelia-loader-default",
                "aurelia-logging-console",
                "aurelia-router",
                "aurelia-templating-binding",
                "aurelia-templating-resources",
                "aurelia-templating-router",
                "aurelia-polyfills",
                
                "highlightjs",
                "moment"
            ],
            "excludes": [
                
            ],
            "options": {
                "inject": true,
                "minify": true,
                "rev": true
            }
        }
    }
}